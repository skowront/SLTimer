@inherits LayoutComponentBase
@using SLTimer.Shared.WebsiteLocResources;
@inject DialogService DialogService

<RadzenDialog></RadzenDialog>
<RadzenNotification></RadzenNotification>
<RadzenTooltip></RadzenTooltip>

<div class="row m-0 p-0">
    <div class="col-lg-12 m-0 p-0">
        <RadzenLayout class="rz-shadow-3" Style="background-color:transparent">
            <RadzenHeader>
                <div class="p-1">
                    <div class="d-flex align-items-center">
                        <RadzenImage Path="/images/regios/REGIOS-logo.png" Style="width:40px"></RadzenImage>
                        <LanguageSelectorMenu Style="margin-left:auto; margin-right:25px;"></LanguageSelectorMenu>
                    </div>
                </div>
            </RadzenHeader>
@*            <RadzenBody Style="background-color:var(--rz-base-900) ">
                @Body
            </RadzenBody>*@
            <RadzenBody style="background: rgba(0, 0, 0, .50) url(/images/regios/background.jpg);background-blend-mode: darken;">
                <div>
                    @Body
                </div>
            </RadzenBody>
            
        </RadzenLayout>
        <!-- Footer -->
        <footer class="page-footer" style="background-color:var(--rz-base-800)">
            <div class="row p-1 opacity-100 m-0 d-block ">
                <div class="align-self-center text-center">
                    <RadzenText>
                        © 2022 Copyright:
                    </RadzenText>
                    <div>
                        <RadzenLink Style="color:var(--rz-primary)" Path="https://regios.org.pl" >regios.org.pl</RadzenLink>
                        <RadzenText class="d-inline">/</RadzenText>
                        <RadzenLink Style="color:var(--rz-primary)" Path="https://github.com/skowront">Tomasz Skowron</RadzenLink>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Footer -->
    </div>
</div>



@code {
